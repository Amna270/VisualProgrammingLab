<Window x:Class="Lab_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_Final"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="text_box1" HorizontalAlignment="Left" Margin="108,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="25" Background="#FFD8D6D6"/>
        <TextBox x:Name="text_box2" HorizontalAlignment="Left" Margin="108,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="25" Background="#FFD8D6D6"/>
        <TextBox x:Name="text_box4" HorizontalAlignment="Left" Margin="543,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="25" Background="#FFD8D6D6"/>
        <TextBox x:Name="text_box3" HorizontalAlignment="Left" Margin="543,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="25" Background="#FFD8D6D6"/>
        <Label x:Name="Label1" Content="Name" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="74"/>
        <Label x:Name="Label1_Copy" Content="Grade" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="74"/>
        <Label x:Name="Label1_Copy1" Content="Subject" HorizontalAlignment="Left" Margin="437,27,0,0" VerticalAlignment="Top" Width="74"/>
        <Label x:Name="Label1_Copy2" Content="Attendence Percentage" HorizontalAlignment="Left" Margin="362,72,0,0" VerticalAlignment="Top" Width="149"/>
        <Button x:Name="add" Content="Add" HorizontalAlignment="Left" Margin="47,343,0,0" VerticalAlignment="Top" Height="34" Width="106" Click="add_Click"/>
        <Button x:Name="edit" Content="Edit" HorizontalAlignment="Left" Margin="208,343,0,0" VerticalAlignment="Top" Height="34" Width="106" Click="edit_Click"/>
        <Button x:Name="delete" Content="Delete" HorizontalAlignment="Left" Margin="362,343,0,0" VerticalAlignment="Top" Height="34" Width="106" Click="delete_Click"/>
        <Label x:Name="Label1_Copy3" Content="Marks" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="text_box5" HorizontalAlignment="Left" Margin="108,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="25" Background="#FFD8D6D6"/>
        <ListBox x:Name="std_list" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="55,175,256,115"/>
        <ComboBox x:Name="combo" HorizontalAlignment="Left" Margin="543,117,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="combo_SelectionChanged"/>
    </Grid>
</Window>
